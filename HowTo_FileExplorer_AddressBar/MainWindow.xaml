<Window
    x:Class="HowTo_FileExplorer_AddressBar.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HowTo_FileExplorer_AddressBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="Black"
    Foreground="Ivory"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="addressPath"
            Grid.Row="0"
            Margin="10,2,10,2"
            VerticalAlignment="Center"
            Background="Black"
            Foreground="Ivory"
            MouseDoubleClick="addressPath_MouseDoubleClick"
            Text="C:\Users\Standard\source\repos\AsyncApp"
            Visibility="Visible" />
        <Grid >
            
        
        <StackPanel
            x:Name="addressPanel"
            Orientation="Horizontal"
            Visibility="Hidden" />
        </Grid>
        <Label Content="focus" Grid.Row="1" Foreground="Ivory"/>
    </Grid>
</Window>
